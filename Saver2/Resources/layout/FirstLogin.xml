
<RelativeLayout     
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MenuPageRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#33414E"
    android:descendantFocusability="beforeDescendants">
        <ImageView
        android:layout_above="@+id/FLmtxtQR"
        android:layout_centerInParent="true"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:id="@+id/FLiv1" />
    <android.support.design.widget.TextInputEditText
        android:focusedByDefault="true"
        android:maxLines = "1"
        android:maxWidth = "128dp"
        android:hint="@string/message_Login"
        android:textColorHint = "#FF87CEFA"
        android:focusable="auto"
        android:layout_centerInParent="true"
        android:textColor="#ffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FLmtxtQR" />
    <CheckBox
        android:layout_below="@+id/FLmtxtQR"
        android:layout_centerInParent="true"
        android:textColor="#FF87CEFA"
        android:text="@string/message_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FLchk" />

    <TextView
        android:id = "@+id/copyright1"
        android:layout_marginTop = "20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft = "true"
        android:gravity = "center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saver"
        android:textColor="#ffffffff" />
</RelativeLayout>